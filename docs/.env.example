# =================================
# Siruvapuri Matrimony - Production Environment Variables
# =================================
# Copy this file to .env and update the values

# =================================
# DATABASE CONFIGURATION
# =================================
MYSQL_ROOT_PASSWORD=your_strong_root_password_here
DB_HOST=mysql
DB_PORT=3306
DB_USER=main
DB_PASSWORD=your_strong_db_password_here
DB_NAME=matrimonial_db

# =================================
# JWT CONFIGURATION
# =================================
# Generate a strong secret: openssl rand -base64 64
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here

# =================================
# API URL CONFIGURATION
# =================================
# This URL is used by frontend apps to call the backend API
VITE_API_URL=https://siruvapuri.webexcel.in/api

# =================================
# EMAIL CONFIGURATION (SMTP)
# =================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=Siruvapuri Matrimony <noreply@siruvapuri.com>

# =================================
# AWS S3 CONFIGURATION (for profile photos)
# =================================
AWS_REGION=ap-south-1
AWS_S3_BUCKET=your-s3-bucket-name
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
# Set to true if running on EC2 with IAM role
USE_EC2_IAM_ROLE=false

# =================================
# OPTIONAL: SSL CERTIFICATES
# =================================
# Place your SSL certificates in ./nginx/ssl/
# - fullchain.pem
# - privkey.pem
